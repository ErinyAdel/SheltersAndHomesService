@model OrphanageDetailsModel

@{
    ViewData["Title"] = "ملاجئ";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="container py-5" dir="rtl">
    <div class="card h-100 shadow-sm orphanage-card">
        <div class="card-body d-flex flex-column">
            <h2 class="card-title text-center">@Model.Name</h2>
            <br />
            <div class="mb-3 text-center">
                <img src="@Url.Content(Model.ImageUrl)" alt="Orphanage Image" class="img-fluid" style="object-fit: cover;">
            </div>
            <p class="card-text text-end"><i class="fas fa-map-marker-alt me-2"></i> @Model.Address</p>
            <p class="card-text text-end"><i class="fas fa-phone-alt me-2"></i> @Model.Phone</p>
            <div class="mt-auto text-center">
            </div>
        </div>
    </div>
</div>